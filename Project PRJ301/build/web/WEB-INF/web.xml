<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>HomeFilter</filter-name>
        <filter-class>filter.HomeFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>filter.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>filter.RoleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/crud.jsp</url-pattern>
        <url-pattern>/crud</url-pattern>
        <url-pattern>/update.jsp</url-pattern>
        <url-pattern>/update</url-pattern>
        <url-pattern>/crudcategory.jsp</url-pattern>
        <url-pattern>/managecategory</url-pattern>
        <url-pattern>/crudcategory</url-pattern>
        <url-pattern>/statistics.jsp</url-pattern>
        <url-pattern>/statistics</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/crud.jsp</url-pattern>
        <url-pattern>/crud</url-pattern>
        <url-pattern>/crudcategory.jsp</url-pattern>
        <url-pattern>/managecategory</url-pattern>
        <url-pattern>/crudcategory</url-pattern>
        <url-pattern>/statistics.jsp</url-pattern>
        <url-pattern>/statistics</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>HomeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
